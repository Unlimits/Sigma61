                    While not EOF(Handle) do
                    begin
                         ReadLn(Handle,s);
                         if (pos(st,s)<>0) then Start:=True;
                         if (Start) then Memo1.lines.Add(s);
                         if (pos(fn,s)<>0) then Start:=False;

                    end;
                    CloseFile(Handle);
                    Memo1.Lines.EndUpdate;
               end;
     end;
end;
